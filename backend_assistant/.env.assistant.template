# Application settings
APP_NAME="Backend Assistant"
DEBUG=False
BASE_URL="http://localhost:8001"

# Logging
LOG_LEVEL="INFO"

# IMAP Settings (for Zoho or other email provider)
IMAP_HOST="imap.example.com"
IMAP_PORT=993
IMAP_USER="your-email@example.com"
IMAP_PASSWORD="your-email-or-app-specific-password"
EMAIL_POLL_INTERVAL=30

# InvoiceNinja Settings (Ensure this matches your InvoiceNinja setup in docker-compose)
# If assistant is in the same docker network as invoiceninja, use service name: e.g., http://invoiceninja:9000
# If accessing invoiceninja exposed on host from assistant running on host (not in docker-compose test): e.g., http://localhost:9001 (assuming IN port 9001 mapped)
INVOICENINJA_URL="http://invoiceninja:9000"
INVOICENINJA_API_TOKEN="YOUR_INVOICENINJA_API_TOKEN"
CLIENT_BILLING_RATES_PATH="/app/config/client_billing_rates.json"

# Google Calendar API Settings
# Google Calendar API Settings (OAuth 2.0 for user accounts)
# These are obtained from Google Cloud Console when you set up OAuth 2.0 credentials (Desktop App type recommended for this flow)
# GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
# GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
# GOOGLE_REFRESH_TOKEN="USER_OBTAINED_REFRESH_TOKEN" # User needs to obtain this once manually
# GOOGLE_CALENDAR_ID="primary" # Or your specific calendar_id@group.calendar.google.com
# (Optional: GOOGLE_APPLICATION_CREDENTIALS for service account flow)

# Notification Webhook URL (for Matrix/Beeper integration via a bridge)
# NOTIFICATION_WEBHOOK_URL="https://your-webhook-bridge-url.com/notify"

# Geocoding (Nominatim is public, ensure fair use. Consider hosting your own instance for heavy use.)
# GEOCODING_USER_AGENT="YourAppName/1.0 (your-email@example.com for contact)" # Important for Nominatim

# SQLite Database path (inside container)
# SQLITE_DB_PATH="/app/data/assistant.db" # Default is usually fine
